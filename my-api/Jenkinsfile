pipeline {
    
    agent {
        docker {
            image 'dozza/jenkins-jdk11-mvn-dnd'
        }
    }

    environment {
        TIMESTAMP = sh(script: "echo `date +%s`", returnStdout: true).trim()
    }

    stages {
        stage('Build') { 
            steps {
                dir("my-api") {
                    sh 'mvn -B -DskipTests clean package'
                }
            }
        }

        /* tests are skipped
        stage('Test') {
            steps {
                dir("my-api") {
                    sh 'mvn test'
                }
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }*/

        stage('Ship') {
            steps {
                dir("my-api") {
                    sh 'cp target/my-api-1.0.1.${TIMESTAMP}.jar src/main/docker/my-api.jar'
                }

               sh 'mvn docker:build'
               sh 'mvn docker:push'

            }
        }
    }
}